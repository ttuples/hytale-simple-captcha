$C = "../Common.ui";
$S = "../Tuples_SimpleCaptcha_Styles.ui";

$C.@PageOverlay {}

$C.@Container {
  Anchor: (Width: 450, Height: 450);

  #Title {
    Group {
      $C.@Title #PageTitle {
        @Text = "Simple Captcha";
      }
    }
  }

  #Content {
    LayoutMode: Top;

    Group {
      LayoutMode: Middle;

      Label #CaptchaInstruction {
        Style: $S.@CaptchaLabelStyle;
        Text: "";
      }
    }

    Label {FlexWeight: 1;}

    Group #CaptchaContainer {
      LayoutMode: Middle;
      Anchor: (Width: 320, Height: 320);

      Group #CaptchaGrid {
        LayoutMode: LeftCenterWrap;
      }
    }

    Label {FlexWeight: 1;}

    Group {
      LayoutMode: Bottom;

      Group {
        LayoutMode: Left;

        Label {FlexWeight: 1;}

        $S.@CaptchaButton #SubmitButton {
          @Text = %captcha.ui.submit;
        }

        Label {FlexWeight: 1;}

        $S.@CaptchaButton #RefreshButton {
          @Text = %captcha.ui.refresh;
        }

        Label {FlexWeight: 1;}
      }
    }
  }
}

$C.@BackButton {}